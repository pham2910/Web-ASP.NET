@{
    Layout = null;
}
@using Models;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1,maximum-scale=1">
    <title>REVIEW COMPANY</title>
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="~/Areas/Admin/AssetsAdmin/main/css/style.css">
    <link rel="icon" href="~/Areas/Admin/AssetsAdmin/main/img/favicon.ico" type="image/x-icon" />
    <link rel="stylesheet" href="./assets/fonts/themify-icons/themify-icons.css">
    <link href="css/bootstrap.min.css" rel="stylesheet">
 


    <link href="fonts/css/font-awesome.min.css" rel="stylesheet">
    <link href="css/animate.min.css" rel="stylesheet">
    <script type="text/php">
        $(document).ready(function () {
            $('table tr').click(function () {
                window.location = $(this).attr('href');
                return false;
            });
        });
    </script>
    <style>
        table tr {
            cursor: pointer;
        }
    </style>
</head>
<body>

    <input type="checkbox" name="" id="nav-toggle">
    <div class="sidebar">
        <div class="sidebar-brand">
            <h2>
            <img class="logo" src="~/Areas/Admin/AssetsAdmin/main/img/icon.png" style="width:3rem">
                <span>REVIEW COMPANY</span>
            </h2>
        </div>

        <div class="sidebar-menu">
            <ul>
                <li>
                    <a href="@Url.Action("Index","AdminHome")"  class="@(ViewContext.RouteData.Values["Controller"].ToString() == "AdminHome" && ViewContext.RouteData.Values["Action"].ToString() =="Index" ? "active" : "")">
                    <span class="las la-igloo"></span> <span>DASHBOARD</span></a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Companies")"  class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Companies" && ViewContext.RouteData.Values["Action"].ToString() =="Index" ? "active" : "")">
                    <span class="las la-building"></span><span>COMPANY</span></a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Fields")"  class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Fields" && ViewContext.RouteData.Values["Action"].ToString() =="Index" ? "active" : "")">
                    <span class="las la-industry"></span><span>FILED</span></a>
                </li>
                <li>
                    <a href="@Url.Action("Index","Users")"  class="@(ViewContext.RouteData.Values["Controller"].ToString() == "Users" && ViewContext.RouteData.Values["Action"].ToString() =="Index" ? "active" : "")">
                    <span class="las la-users"></span><span>USER</span></a>
                </li>
            </ul>
        </div>
    </div>


    <div class="main-content">
        <header>
            <h2>
                <label for="nav-toggle">
                    <span class="las la-bars"></span>
                </label>
                

            </h2>

            <div class="search-wrapper">
                <span class="las la-search"></span>
                <input type="search" placeholder="Search here" />
            </div>

            <div class="user-wrapper">
                <img src="~/Areas/Admin/AssetsAdmin/main/img/avatar.png" width="50px" height="50px" alt="">
                <div>
                    <h4>@Session[Constants.USER_SESSION]</h4>
                    <small>Super Admin</small>
                </div>
                <div>                  
                    <a href="@Url.Action("Index","AdminLogin")">
                        <span class="iconify" data-icon="mdi:logout" style="color: #1f2937; margin-left:20px" data-width="32" data-height="28"></span>
                    </a>
                </div>

            </div>


        </header>

        <main>
            @RenderBody()
        </main>
    </div>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <script src="https://code.iconify.design/2/2.1.0/iconify.min.js"></script>
</body>
</html>